<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>
<?import javafx.scene.control.ComboBox?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="org.openjfx.EECS_3311_Project.controllers.BookingEditController"
            stylesheets="@../styles/BookingEditStyle.css">

    <center>
        <VBox spacing="10" styleClass="main-container">
            <children>
                <Label text="BOOKING INFO" styleClass="header-label"/>
                
                <Label text="Meeting Name:" styleClass="field-label"/>
                <TextField maxWidth="300" fx:id="bookingName" promptText="Meeting Name" styleClass="text-field"/>
                
                <Label text="Date and Time:" styleClass="field-label"/>
                <Text fx:id="dateTime" styleClass="info-text"/>
                
                <Label text="Host's Email:" styleClass="field-label"/>
                <Text fx:id="hostEmail" styleClass="info-text"/>
                
                <Label text="Booking Price:" styleClass="field-label"/>
                <Text fx:id="bookingPrice" styleClass="info-text"/>
                
                <Label text="Student / Organization ID:" styleClass="field-label"/>
                <TextField maxWidth="300" fx:id="studentIdField" promptText="Student or Organization ID" styleClass="text-field"/>
                
                <Label text="Add attendee by ID:" styleClass="field-label"/>
                <HBox spacing="10">
                    <children>
                        <TextField maxWidth="300" fx:id="attendeeEmailField" promptText="Enter an invitee's email" styleClass="text-field" HBox.hgrow="ALWAYS"/>
                        <Button text="Add" onAction="#onAddAttendee" styleClass="add-button"/>
                    </children>
                </HBox>
                
                <Label text="Current attendees:" styleClass="field-label"/>
                <VBox fx:id="attendeesList" spacing="5"/>
                
				<ComboBox fx:id="comboExtendTime" promptText="Extend booking" styleClass="combo-box">
				    <items>
				        
				    </items>
				</ComboBox>
				<Button fx:id="comboExtendTimeBtn" text="Extend Time" onAction="#onExtendTime" styleClass="extend-button"/>

            </children>
        </VBox>
    </center>

    <bottom>
    
        <HBox alignment="CENTER" spacing="10" styleClass="bottom-container">
            <children>
                <Button  text="Submit" onAction="#onSubmit" styleClass="submit-button"/>
            </children>
        </HBox>
    </bottom>
</BorderPane>
