<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Text?>

<BorderPane stylesheets="@../styles/HomePageStyle.css" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="org.openjfx.EECS_3311_Project.controllers.HomePageController">

    <center>
        <HBox alignment="CENTER" spacing="50" style="-fx-background-color: white; -fx-padding: 50;">
            
            <VBox alignment="CENTER" spacing="20">
                <ImageView fx:id="image_profile" fitHeight="200.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@../images/Default_pfp.jpg" />
                    </image>
                </ImageView>
                
               <VBox alignment="TOP_LEFT" spacing="10">
			   <HBox alignment="CENTER_LEFT" spacing="5">
			        <Label styleClass="field-label" text="Name:" />
			        <Text fx:id="text_name" />
			    </HBox>
			
			    <HBox alignment="CENTER_LEFT" spacing="5">
			        <Label styleClass="field-label" text="Email:" />
			        <Text fx:id="text_email" />
			    </HBox>
			
			    <HBox alignment="CENTER_LEFT" spacing="5">
			        <Label styleClass="field-label" text="Account Type:" />
			        <Text fx:id="text_accountType" />
			    </HBox>
			
			    <HBox alignment="CENTER_LEFT" spacing="5">
			        <Label styleClass="field-label" text="Account Role:" />
			        <Text fx:id="text_accountRole" />
			    </HBox>
			
			    <HBox alignment="CENTER_LEFT" spacing="5">
			        <Label styleClass="field-label" text="Hourly Rate:" />
			        <Text fx:id="text_hourlyRate" />
			    </HBox>
				</VBox>

                
            </VBox>

            <VBox alignment="CENTER" HBox.hgrow="ALWAYS" spacing="10">
                <Text text="Created Bookings" style="-fx-font-weight: bold;" />
            <ListView fx:id="lv_createdBookingsListView" VBox.vgrow="ALWAYS" prefWidth="450.0" />
            <Text text="Invited Bookings" style="-fx-font-weight: bold;"/>
            <ListView fx:id="lv_invitedBookingsListView" VBox.vgrow="ALWAYS" prefWidth="450.0" />
            </VBox>

        </HBox>
    </center>

</BorderPane>
